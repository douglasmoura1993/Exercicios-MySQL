SELECT * FROM CLIENTE;
SELECT * FROM DEPENDENTE;

SELECT CLI_NOME AS CLIENTE FROM CLIENTE WHERE SALARIO > 2500.00;

SELECT CLI_NOME AS CLIENTE, CLI_FONE AS TELEFONE FROM CLIENTE GROUP BY CLI_NOME;

SELECT CLI_NOME AS NOME FROM CLIENTE WHERE SALARIO > 1500.00 AND CLI_NOME LIKE 'R%';

SELECT DEP_NOME AS DEPENDENTE FROM DEPENDENTE WHERE DEP_NOME LIKE '%OLIVEIRA%';

SELECT CLI_NOME AS NOME FROM CLIENTE WHERE CLI_FONE NOT LIKE '9%';
