CREATE DATABASE BD;

CREATE TABLE CLIENTE(
CLI_ID INT,
CLI_NOME NVARCHAR(30),
CLI_FONE NVARCHAR(15),
SALARIO DOUBLE,
PRIMARY KEY (CLI_ID)
);
CREATE TABLE DEPENDENTE(
DEP_NOME NVARCHAR(30),
DEP_FONE NVARCHAR(15),
DEP_ID INT,
CLI_ID INT,
PRIMARY KEY (DEP_ID),
FOREIGN KEY (CLI_ID) REFERENCES CLIENTE (CLI_ID)
);

